<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.zyuco.lab10.CreateActivity">

    <TextView
        android:id="@+id/hint_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/name"
        android:text="@string/hint_name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/name"
        app:layout_constraintTop_toTopOf="@id/name"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@id/hint_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/hint_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/birthday"
        android:text="@string/hint_birthday"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/birthday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/birthday"
        app:layout_constraintTop_toTopOf="@id/birthday"/>

    <EditText
        android:id="@+id/birthday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@id/hint_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"/>


    <TextView
        android:id="@+id/hint_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/gift"
        android:text="@string/hint_gift"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/gift"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gift"
        app:layout_constraintTop_toTopOf="@id/gift"/>

    <EditText
        android:id="@+id/gift"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@id/hint_gift"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/birthday"/>

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorButton"
        android:text="@string/button_add"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gift"/>

</android.support.constraint.ConstraintLayout>
